set -e
alias f=fossil

tag=v$(date +%Y%m%d)
f update &&
	( test -z "$(f changes --no-classify)" || f ci -m "Released $tag" ) &&
	cd ../release &&
	f update &&
	f merge trunk &&
	test -z "$(f changes --conflict)" &&
	tools/mmake &&
	f diff -w --tk &&
	f ci --tag $tag -m "Merged trunk changes for $tag into release branch"
